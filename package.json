{
  "name": "nkeditor3",
  "version": "2.0.0",
  "description": "MIDI CC remapper for nanoKONTROL2 hardware controller - Electron GUI",
  "type": "module",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:vite": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"electron .\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "midi",
    "nanoKONTROL2",
    "controller",
    "remapper",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.21.5",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.15.0",
    "vite-plugin-electron-renderer": "^0.14.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "easymidi": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.0",
    "zustand": "^4.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.nkeditor3.app",
    "productName": "nkEditor3",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Audio"
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.music"
    },
    "win": {
      "target": ["nsis"]
    }
  }
}
